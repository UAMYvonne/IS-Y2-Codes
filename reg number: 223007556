  public class question1 {
    public static void main(String[] args) {
    int num;
        System.out.println("Enter a number");
         Scanner n =new Scanner(System.in);
        num=n.nextInt();
        if ( num% 2 == 0){
             System.out.println("The number is even");
        }
        else {
            System.out.println("The number is odd");
    }
    }
}  




